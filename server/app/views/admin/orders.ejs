<div class="container-fluid">
  <div class="row">
    <div class="col-sm-3 col-md-2 sidebar">
      <ul class="nav nav-sidebar">
            <li ><a href="index">数据统计<span class="sr-only">(current)</span></a></li>
            <li class="active"><a href="orders">订单管理 </a></li>
             <li><a href="products">商品管理 </a></li>
            <li><a href="#">顾客管理</a></li>
          </ul>
    </div>
    <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
          <h2 class="sub-header">订单列表</h2>
          <div>
            <button class="btn btn-default" type="button">未处理订单</button>
            <button class="btn btn-default" type="button">添加订单</button> 
          </div>
          <div class="table-responsive">
            <table class="table table-striped">
              <thead>
                <tr>
                  <th>顾客姓名</th>
                  <th>下单时间</th>
                  <th>订单状态</th>
                  <th>商品</th>
                  <th>手机</th>
                  <th>送达地址</th>
                  <th>总价</th>
                  <th>运费</th>
                  <th>备注</th>
                  <th>操作</th>
                </tr>
              </thead>
              <tbody>
                <%  orders.forEach(function(order){ %>
                  <tr data-id="<%= order._id %>">
                  <td><%= order.customer.name %></td>
                  <td><%= order.addDate %></td>
                  <td><%= order.state %></td>
                  <td><%= order.products %></td>
                  <td><%= order.phone %></td>
                  <td><%= order.address %></td>
                  <td><%= order.valueSum %></td>
                  <td><%= order.freight %></td>
                  <td><%= order.remarks %></td>
                  <td>
                  <button type="button" class="btn btn-link btn-sm del">删除</button>
                    </td>
                   </tr>
                <%  })%>
               
              </tbody>
            </table>
          </div>
